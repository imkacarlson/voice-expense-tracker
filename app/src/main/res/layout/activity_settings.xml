<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/input_spreadsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/spreadsheet_id"
            android:contentDescription="@string/spreadsheet_id" />

        <EditText
            android:id="@+id/input_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sheet1"
            android:hint="@string/sheet_name"
            android:contentDescription="@string/sheet_name" />

        <EditText
            android:id="@+id/input_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/known_accounts"
            android:contentDescription="@string/known_accounts" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/save" />

    </LinearLayout>
</ScrollView>
