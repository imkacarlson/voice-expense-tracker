<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_auth_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_status_signed_out"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">
            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:text="@string/sign_in" />
            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_sign_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:text="@string/sign_out" />
        </LinearLayout>

        <EditText
            android:id="@+id/input_spreadsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/spreadsheet_id"
            android:contentDescription="@string/spreadsheet_id" />

        <EditText
            android:id="@+id/input_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sheet1"
            android:hint="@string/sheet_name"
            android:contentDescription="@string/sheet_name" />

        <EditText
            android:id="@+id/input_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/known_accounts"
            android:contentDescription="@string/known_accounts" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/save" />

        <TextView
            android:id="@+id/text_sync_gating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="@string/sync_gating_message_default" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/text_ai_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On-device AI status: Unknown"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_open_setup_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/setup_guide_title" />

    </LinearLayout>
</ScrollView>
