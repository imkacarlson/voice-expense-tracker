<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.Material3.ActionBar"
            app:title="@string/settings_title"
            app:navigationIcon="?attr/homeAsUpIndicator" />

        <TextView
            android:id="@+id/text_auth_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_status_signed_out"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">
            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:text="@string/sign_in" />
            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_sign_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:text="@string/sign_out" />
        </LinearLayout>

        <EditText
            android:id="@+id/input_web_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/web_app_url"
            android:contentDescription="@string/web_app_url"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/input_backup_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/backup_auth_token"
            android:contentDescription="@string/backup_auth_token"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/input_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/known_accounts"
            android:contentDescription="@string/known_accounts" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/save" />

        <TextView
            android:id="@+id/text_sync_gating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="@string/sync_gating_message_default" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/text_ai_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On-device AI status: Unknown"
            android:paddingBottom="8dp" />

        

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_debug_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_logs_label"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_open_setup_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/setup_guide_title" />

        <!-- Dropdown Configuration Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dropdown Configuration"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_option_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/list_options"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:dividerHeight="1dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/input_new_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="New option label" />
            <Button
                android:id="@+id/btn_add_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">
            <Button
                android:id="@+id/btn_move_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Move Up" />
            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_move_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Move Down" />
            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_delete_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">
            <Spinner
                android:id="@+id/spinner_default_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_set_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Default" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_import_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="48dp"
            android:text="@string/import_configuration" />

    </LinearLayout>
</ScrollView>
