<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:title="@string/draft_transaction"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/draft_transaction"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <!-- Draft fields moved above actions and made always-visible area -->
            <LinearLayout
                android:id="@+id/container_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/label_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_amount"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <EditText
                    android:id="@+id/field_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_amount"
                    android:inputType="numberDecimal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/label_overall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_overall"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <EditText
                    android:id="@+id/field_overall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_overall"
                    android:inputType="numberDecimal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/label_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_merchant"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <LinearLayout
                    android:id="@+id/container_field_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/field_merchant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_merchant"
                        android:inputType="textCapWords"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/loading_merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/field_loading_indicator"
                        android:indeterminate="true"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/label_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_description"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <LinearLayout
                    android:id="@+id/container_field_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/field_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_description"
                        android:inputType="textCapSentences"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/loading_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/field_loading_indicator"
                        android:indeterminate="true"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/label_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_type"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/label_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_category"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <LinearLayout
                    android:id="@+id/container_field_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ProgressBar
                        android:id="@+id/loading_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/field_loading_indicator"
                        android:indeterminate="true"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/label_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_tags"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <LinearLayout
                    android:id="@+id/container_field_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/field_tags"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_tags"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/loading_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/field_loading_indicator"
                        android:indeterminate="true"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/label_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_account"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <LinearLayout
                    android:id="@+id/container_field_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/spinner_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ProgressBar
                        android:id="@+id/loading_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/field_loading_indicator"
                        android:indeterminate="true"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/label_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_date"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/field_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_date"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:focusable="false"
                    android:clickable="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/label_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_note"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <EditText
                    android:id="@+id/field_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_note"
                    android:inputType="textCapSentences"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Voice correction actions removed in text-first refactor -->
        </LinearLayout>
    </ScrollView>

    <!-- Primary confirm/cancel actions anchored at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="@string/confirm" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>
