<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:label="Voice Expense"
        android:supportsRtl="true"
        android:theme="@style/Theme.VoiceExpense">
        <!-- Placeholder; widget and services will be added in later tasks -->
        <activity
            android:name=".ui.common.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.confirmation.TransactionConfirmationActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.voice.StartVoiceActivity"
            android:exported="false"
            android:theme="@style/Theme.VoiceExpense.Transparent" />
        <activity
            android:name=".ui.voice.ListeningActivity"
            android:exported="false" />
        <activity android:name=".ui.setup.SetupGuidePage" />
        <activity android:name=".ui.common.SettingsActivity" />

        <service
            android:name=".service.voice.VoiceRecordingService"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <receiver
            android:name=".ui.widget.ExpenseWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_expense_info" />
        </receiver>
    </application>

</manifest>
